{
  "install": "npm run install:all",
  "start": "npm run start:prod",
  "watch": {
    "throttle": 1000,
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^server/dist/",
        "^client/dist/"
      ]
    },
    "noWatch": [
      "node_modules",
      "client/node_modules",
      "server/node_modules"
    ]
  }
} 